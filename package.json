{
  "name": "delta-skin-generator",
  "version": "0.0.1",
  "description": "Component based emulator skin creation for deltaskins, with support for altSkins",
  "type": "module",
  "main": "index.ts",
  "bin": "node --loader ts-node/esm",
  "scripts": {
    "build:lint": "npx eslint --fix --config eslint.config.json ./index.ts ./lib/**/*.ts",
    "build:knip": "npx knip --config knip.config.jsonc",
    "build:typescript": "npx tsc --noEmit",
    "build": "npm run build:lint && npm run build:knip && npm run build:typescript",
    "execute": "node --loader ts-node/esm index.ts"
  },
  "author": "steilerDev",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "jsonpath-plus": "^8.1.0",
    "jsonpointer": "^5.0.1",
    "meow": "^13.2.0",
    "sharp": "^0.33.3",
    "svgson": "^5.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.51.0",
    "knip": "^5.9.3"
  }
}
