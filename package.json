{
  "name": "delta-skin-generator",
  "version": "0.0.0-development",
  "description": "Component based emulator skin creation for deltaskins, with support for altSkins",
  "author": "steilerDev",
  "repository": {
    "type": "git",
    "url": "https://github.com/steilerDev/delta-skin-generator.git"
  },
  "license": "GPL-3.0-or-later",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:lint": "npx eslint --fix --config eslint.config.json ./index.ts ./lib/**/*.ts",
    "build:knip": "npx knip --config knip.config.jsonc",
    "build:typescript": "npx tsc",
    "build": "npm run build:lint && npm run build:knip && npm run build:typescript",
    "execute": "node dist/index.js"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "jsonpath-plus": "^8.1.0",
    "jsonpointer": "^5.0.1",
    "meow": "^13.2.0",
    "sharp": "^0.33.3",
    "svgson": "^5.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.51.0",
    "knip": "^5.9.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
